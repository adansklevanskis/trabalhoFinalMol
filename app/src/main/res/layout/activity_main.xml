<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:text="Aplicativo para cadastros de espécies de animais"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_weight="0.12"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_weight="0.12"
        android:background="@mipmap/animais"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/animais" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova Espécie"
        android:id="@+id/btnAddEspecie"
        android:layout_weight="0.12"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Espécies"
        android:id="@+id/btnVerEspecies"
        android:layout_weight="0.12"
        android:layout_below="@+id/btnAddEspecie"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
